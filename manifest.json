{
  "manifest_version": 2,
  "name": "biblio-twitter",
  "version": "1.0",
  "description": "Shows books written by authors on their profile pages",
  "page_action": {
    "default_title": "This is Twitter"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "js": ["jquery-1.7.2.min.js", "background.js"],
      "css": ["makers.css"]
    }
  ],
  "permissions" : [
    "tabs", "http://twitter.com/", "https://twitter.com/", "https://www.authorgraph.com/"
  ]
}
